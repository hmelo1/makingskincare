<%= link_to "Back to all formulas", root_path %><br><br>
<div class="card mb-3">

  <div class="card-body">
    <div class="row">
      <div class="col-sm-7">  
        <h1 class="card-title"><%= @formula.title %></h1>

        <h6 class="card-subtitle text-muted">Created by: <%= @formula.user.username %></h6><br>

        <h5>Description:</h5>
        <p class="text-primary">
          <%= @formula.description %>
        </p>

        <h5>Category:</h5>
        <p class="text-primary">
          <%= link_to @formula.category.name, @formula.category %>  
        </p>
      </div>

      <div class="col-sm-5">
        <% if @formula.image_file_size != nil %><br>
          <%= image_tag @formula.image.url(:medium), :style => "float :right;" %>
        <% end %>
      </div>
    </div> <!-- end of row -->
  </div> <!-- end of card-body -->


  <ul class="list-group list-group-flush">

    <li class="list-group-item">
      <h5>Skin Concerns:</h5>
      <% @formula.skinconcerns.each do |s| %>
        <span class="badge badge-primary"><%= s.name %></span>
      <% end %>
    </li>

    <li class="list-group-item">
      <h5>Ingredients:</h5>
      <ul>
        <% @formula.ingredients.each do |i| %>
          <li><%= i.name %></li>
        <% end %>
      </ul>
    </li>

    <li class="list-group-item">
      <h5>Directions:</h5>
      <p><%= @formula.direction %></p>

      <% if user_signed_in? %><br>
        <%= link_to "EDIT", edit_formula_path, class: "btn btn-primary" %>
        <%= link_to "DELETE", formula_path, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-primary" %>
      <% end %>  
    </li>

  </ul>

</div><!-- end of card mb-3 -->


