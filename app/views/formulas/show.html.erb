<%= link_to "Back", root_path %><br><br>

<h1><%= @formula.title %></h1>
<p>Created by: <%= @formula.user.username %></p>
<p><%= @formula.description %></p>
<p><%= @formula.direction %></p>

<% if @formula.image_file_size != nil %>
  <p><%= image_tag @formula.image.url(:medium, class: "formula_image") %></p>
<% end %>

<% if user_signed_in? %>
  <%= link_to "EDIT", edit_formula_path, class: "btn btn-primary" %>
  <%= link_to "DELETE", formula_path, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-primary" %>
<% end %>  


